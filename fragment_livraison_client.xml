<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LivraisonClientFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Livraison"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/black"
        />
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID client"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/editTextIdLivraison"
            android:inputType="number"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TextViewNomLivraison"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom:"

            android:textSize="20sp"/>
        <TextView
            android:id="@+id/TextViewPrenomLivraison"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:hint="Prenom:"

            android:textSize="20sp"/>
        <TextView
            android:id="@+id/TextViewPrixLivraison"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"

            android:hint="Prix:"
            android:textSize="20sp"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnLivraisonSelectionner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Selectionner"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantité à Livrer"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:backgroundTint="@color/white"
            android:id="@+id/editTextQuantiteLivrer"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnLivrer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:text="Livrer"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnHistoriqueLivraison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:text="Historique"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />




</LinearLayout>

